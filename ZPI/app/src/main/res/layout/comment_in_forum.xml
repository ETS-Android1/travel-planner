<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/rounded"
    android:padding="12dp">

    <TableRow
        android:id="@+id/tr_icon3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_initials1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/text_view_circle"
            android:backgroundTint="#263238"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:padding="8dp"
            android:text="AR"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_personName1"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="22dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_vertical"
            android:text="Ty (Aleksandra Rzepecka)"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </TableRow>

    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/poppins"
        android:gravity="start"
        android:hint="Tu wpisz swoją odpowiedź"
        android:textAlignment="gravity"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tr_icon3" />


    <TextView
        android:id="@+id/deleteComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="12dp"
        android:text="@string/delete_comment"
        android:textColor="#A30000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_comment" />

</androidx.constraintlayout.widget.ConstraintLayout>