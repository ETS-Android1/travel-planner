<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/tvInitials"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/text_view_circle"
            android:fontFamily="@font/poppins_light"
            android:gravity="center"
            android:padding="8dp"
            android:text="AR"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tvInitials"
            android:layout_marginLeft="30dp"
            android:layout_toEndOf="@id/tvInitials"
            android:fontFamily="@font/poppins_light"
            android:text="Aleksandra Rzepecka"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvName"
            android:layout_alignLeft="@id/tvName"
            android:layout_alignRight="@id/tvName"
            android:fontFamily="@font/poppins_light"
            android:text="Co tam"
            android:textSize="10sp"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17:20"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_alignTop="@id/tvName"
            android:layout_toEndOf="@id/tvName"
            android:layout_marginLeft="30dp"/>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>