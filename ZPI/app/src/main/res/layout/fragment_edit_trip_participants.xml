<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditTripParticipants">

    <TextView
        android:id="@+id/participantsTV2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/poppins_light"
        android:gravity="start|center_vertical"
        android:text="Uczestnicy"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/searchUsersTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_light"
        android:gravity="start|center_vertical"
        android:text="Wyszukaj użytkowników"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/participantsTV2" />

    <EditText
        android:id="@+id/searchUsersInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginStart="40dp"

        android:layout_marginTop="4dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/rounded"
        android:drawableTint="@color/white"
        android:ems="10"
        android:foregroundTint="#FFFFFF"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchUsersTV" />

    <TextView
        android:id="@+id/inputNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:fontFamily="@font/poppins_light"
        android:text="imię i nazwisko"
        android:textColor="#BABABA"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/searchUsersInput"
        app:layout_constraintStart_toStartOf="@id/searchUsersInput"
        app:layout_constraintTop_toTopOf="@id/searchUsersInput" />

    <TextView
        android:id="@+id/invitedUsersTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppins_light"
        android:gravity="start|center_vertical"
        android:text="Zaproszeni użytkownicy"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchUsersInput" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/editParticipantsRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/invitedUsersTV"
        tools:listitem="@layout/item_participant_edit" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:src="@drawable/button_ready"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editParticipantsRV" />

</androidx.constraintlayout.widget.ConstraintLayout>