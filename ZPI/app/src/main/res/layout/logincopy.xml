<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/background"
        android:layout_width="412dp"
        android:layout_height="735dp"
        android:background="#F4FAF3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tlo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginTop="72dp"
                app:srcCompat="@drawable/fasttravel" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:text="Login" />

            <EditText
                android:id="@+id/et_login"
                android:layout_width="309dp"
                android:layout_height="65dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded"
                android:drawableTint="@color/white"
                android:ems="10"
                android:foregroundTint="#FFFFFF"
                android:inputType="textPassword"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="HasÅ‚o" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="309dp"
                android:layout_height="65dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded"
                android:drawableTint="#FFFFFF"
                android:ems="10"
                android:foregroundTint="#FFFFFF"
                android:inputType="textPassword"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/tv_forgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/poppins_light"
                android:onClick="forgotPassword"
                android:text="@string/forgottenPass"
                android:textColor="#403636"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/button_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="800dp"
                android:backgroundTint="#408A3E"
                android:fontFamily="@font/poppins_light"
                android:onClick="login"
                android:text="Zaloguj" />

            <ImageView
                android:id="@+id/lbl_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/konto" />

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/poppins_light"
                android:onClick="register"
                android:textColor="#403636"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck"
                tools:text="@string/register" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>