<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="70dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/myImageView"
        android:background="@drawable/rounded_component" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_your_trips"
        android:gravity="center"
        android:layout_alignTop="@id/myImageView"
        android:layout_alignBottom="@id/myImageView"
        android:layout_alignLeft="@id/myImageView"
        android:layout_alignRight="@id/myImageView"
        android:fontFamily="@font/poppins_light"
        android:textSize="14sp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_tripdate"
        android:layout_alignBottom="@id/tv_your_trips"
        android:layout_alignLeft="@id/tv_your_trips"
        android:layout_alignRight="@id/tv_your_trips"
        android:gravity="center"
        android:textSize="10sp"
        android:layout_marginBottom="10dp">

    </TextView>


</RelativeLayout>